<div class="container">

  <div class="container-page">

    <div class="entete">
      <%= image_tag "logo.png", id:"logo" %>
    </div>

    <p id="notice"><%= notice %></p>

    <div class="cards-container">
      <div class="cards">

        <% @cocktails.each do |c| %>

            <% if c.photo.attached? %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path c.photo.key, height: 300, width: 400, crop: :fill %>)">
                <h2><%= c.name %></h2>
                <p>voir les ingrédients</p>
                <%= link_to cocktail_path(c) do %>
                <% end %>
              </div>
            <% else %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url(<%= asset_path('vase2.jpg') %>)">
                <h2><%= c.name %></h2>
                <p>voir les ingrédients</p>
                <%= link_to cocktail_path(c) do %>
                <% end %>
              </div>
            <% end %>
        <% end %>

        <div class="card-add" style="background-image: linear-gradient(rgba(10,0,0,0.8), rgba(0,10,0,0.8)), url(<%= asset_path('shaker1.jpg') %>)">
          <%= link_to new_cocktail_path do %>
            <p>Ajouter un cocktail
              <i class="fas fa-plus-circle"></i>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>


