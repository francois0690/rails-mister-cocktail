        <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url(<%= asset_path("vase2.jpg") %>)">

        <% end %>
          <h2><%= c.name %></h2>
